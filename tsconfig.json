{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "typings"
  ]
}